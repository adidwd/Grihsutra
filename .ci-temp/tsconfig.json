{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "ESNext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": "..",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["../client/src/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "../client/src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../server/**/*",
    "../dist",
    "../build"
  ]
}
